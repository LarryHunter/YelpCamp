<%- include("../partials/header") %>

<div class="container">
	<h1 style="text-align: center;">Edit comment for <%= campground.name %>...</h1>
	<div class="row">
		<div style="width: 30%; margin: 25px auto;">
			<form class="ui form" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-outline-primary btn-block">Save Changes</button>
				</div>
				<a href="/campgrounds/<%= campground._id %>">Go Back</a>
			</form>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>
