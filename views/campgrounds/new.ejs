<%- include("../partials/header") %>

<div class="container">
	<h1 style="text-align: center;">Enter a new campground.</h1>
	<div class="row">
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="image url">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="description">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" min="0" step="0.01" name="price" placeholder="price per night">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
					<button class="btn btn-lg btn-outline-primary btn-block" href="/campgrounds">Cancel</button>
				</div>
			</form>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>
