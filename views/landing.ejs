    <div class="container">
        <% if (flashErrorMessage && flashErrorMessage.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <%= flashErrorMessage %>
            </div>
        <% } %>
        <% if (flashSuccessMessage && flashSuccessMessage.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= flashSuccessMessage %>
            </div>
        <% } %>
    </div>
    
    <div id="landing-header">
 		<h1>Welcome to YelpCamp!</h1>
		<a href="/campgrounds" class="btn btn-primary btn-lg">View All Campgrounds</a>
    </div>
    
